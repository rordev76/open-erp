<h2>Cadastro</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :company_name, :class => 'control-label col-lg-2' %><br />
    <%= f.text_field :company_name, autofocus: true, autocomplete: "Nome", :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :cpf_cnpj, :class => 'control-label col-lg-2' %><br />
    <%= f.text_field :cpf_cnpj, autofocus: true, autocomplete: "insira cpf ou cnpj", :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :first_name, :class => 'control-label col-lg-2' %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "Nome", :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :last_name, :class => 'control-label col-lg-2' %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "Sobrenome", :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-lg-2' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'form-control' %>
  </div>
  
    <div class="form-group">
    <%= f.label :phone, :class => 'control-label col-lg-2' %><br />
    <%= f.telephone_field :phone, autofocus: true, autocomplete: "telefone", :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password, :class => 'control-label col-lg-2' %>
    <% if @minimum_password_length %>
    <em>MÃ­nimo (<%= @minimum_password_length %> caracteres)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, :class => 'control-label col-lg-2' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => 'form-control' %>
  </div>          

  <div class="actions">
    <%= f.submit "Cadastrar", :class => 'btn btn-primary' %>
  </div>
<% end %>

<%#= render "devise/shared/links" %>
