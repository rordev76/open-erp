<%= form_for @supplier, :html => { :class => "form-horizontal supplier" } do |f| %>

  <% if @supplier.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@supplier.errors.count, "error") %> prohibited this supplier from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @supplier.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label t('suppliers.name'), :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label t('suppliers.tax_number'), :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :cnpj, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label t('suppliers.email'), :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label t('suppliers.cellphone'), :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :cellphone, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label t('suppliers.phone'), :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :phone, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label t('suppliers.address'), :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :address, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label t('suppliers.city'), :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :city, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label t('suppliers.state'), :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :state, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label t('suppliers.landmark'), :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :landmark, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label t('suppliers.note'), :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :note, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit t('suppliers.submit.new'), :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                suppliers_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
