<%= form_for @sale_product, :html => { :class => "form-horizontal sale_product" } do |f| %>

  <% if @sale_product.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@sale_product.errors.count, "error") %> prohibited this sale_product from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @sale_product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label t('sales_products.quantity'), :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :quantity, :class => 'form-control' %>
    </div>
  </div>
